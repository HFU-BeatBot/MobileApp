<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/resultPageLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ResultScreen">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="@string/genre_title_text"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleText"
        tools:text="ROCK" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="298dp"
        android:background="@drawable/genre_graph_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">

        <RelativeLayout
            android:id="@+id/genre1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/test_drawable"
            tools:layout_editor_absoluteX="9dp"
            tools:layout_editor_absoluteY="132dp" />

        <RelativeLayout
            android:id="@+id/genre2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/test_drawable"
            tools:layout_editor_absoluteX="9dp"
            tools:layout_editor_absoluteY="132dp" />

        <RelativeLayout
            android:id="@+id/genre3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/test_drawable"
            tools:layout_editor_absoluteX="9dp"
            tools:layout_editor_absoluteY="132dp" />

        <RelativeLayout
            android:id="@+id/genre4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/test_drawable"
            tools:layout_editor_absoluteX="9dp"
            tools:layout_editor_absoluteY="132dp" />
        <RelativeLayout
            android:id="@+id/genre5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/test_drawable"
            tools:layout_editor_absoluteX="9dp"
            tools:layout_editor_absoluteY="132dp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>